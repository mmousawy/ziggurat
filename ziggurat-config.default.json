{
  "buildOptions": {
    "project": {
      "source": "src",
      "destination": "dist"
    },
    "server": {
      "port": 5050
    },
    "pages": [
      "/**/*.php"
    ],
    "scss": {
      "source": "scss/style.scss",
      "watch": "scss/**/*.scss",
      "base": "scss",
      "destination": "/",
      "browserList": "last 1 version, chrome > 70, not dead"
    },
    "javascript": {
      "source": "script/script.js",
      "destination": "script.min.js",
      "libs": "script/lib/*.js"
    },
    "images": {
      "jpg": [
        "assets/img/**/*.jpg"
      ],
      "png": [
        "assets/img/**/*.png"
      ],
      "sizes": {
        "jpg": [
          512,
          1024
        ],
        "png": [
          512,
          1024,
          1920
        ]
      }
    },
    "svgo": {
      "encode": true
    },
    "favicons": {
      "source": "favicon.png",
      "destination": "favicons",
      "options": {
        "path": "/favicons/",
        "appName": "My project",
        "appShortName": "My project",
        "appDescription": "Example project"
      }
    },
    "otherAssets": {
      "source": [
        "robots.txt",
        "humans.txt"
      ]
    }
  }
}
